<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_and_list_items_height"
        android:id="@+id/customers_item_layout"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        >
        <TextView
            android:id="@+id/customer_item_formula_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:maxHeight="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_blue"
            android:gravity="center"
            android:shadowColor="#9e9e9e"
            android:shadowRadius="10"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
             android:orientation="vertical">
        <TextView
            android:id="@+id/customer_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:layout_marginStart="@dimen/keyline2"
            android:layout_marginEnd="@dimen/keyline1"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:textSize="18sp"
            android:text="Customer Name"
            android:layout_margin="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"
            android:layout_marginStart="@dimen/keyline1"
            android:layout_marginEnd="@dimen/keyline1"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    </LinearLayout>


